<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:padding="6dip"
    android:orientation="vertical" >
    
   	<TextView
        android:id="@+id/tweet_id_text_view_label"
       	android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:gravity="start|center_vertical"
        android:ellipsize="marquee"
        android:text="@string/tweet_id_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
   	<TextView
        android:id="@+id/tweet_id_text_view"
       	android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tweet_id_text_view_label"
        android:gravity="start|center_vertical"
		android:ellipsize="marquee"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
   	<TextView
        android:id="@+id/tweet_text_text_view"
       	android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
        android:layout_below="@id/tweet_id_text_view"
        android:gravity="start|center_vertical"
		android:ellipsize="marquee"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
   	<TextView
        android:id="@+id/tweet_date_text_view_label"
       	android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
        android:layout_below="@id/tweet_text_text_view"
        android:gravity="start|center_vertical"
		android:ellipsize="marquee"
        android:text="@string/tweet_date_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
   	<TextView
        android:id="@+id/tweet_date_text_view"
       	android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
        android:layout_below="@id/tweet_text_text_view"
        android:layout_toEndOf="@id/tweet_date_text_view_label"
        android:gravity="start|center_vertical"
		android:ellipsize="marquee"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
</RelativeLayout>
